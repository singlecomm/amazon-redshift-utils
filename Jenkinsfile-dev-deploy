pipeline {
  agent none

  stages {

    stage('Stash'){
      agent any
      steps{
        sh'''
          git checkout dev
          git pull
          git rev-parse HEAD > hash
        '''
        stash name:'dev_deploy_stash', includes: 'hash' //stores the commit head in a stash
      }
    }

    stage('Kube Deployment'){
      agent any
      steps{
        unstash 'dev_deploy_stash'

        sh'''
          git reset --hard $(cat hash)
          bin/deploy.sh dev
        '''
      }
    }

    stage('Merge to QA') {
      agent any
      steps {
        sshagent(['SingleComm-Service-SSH-Github']) {

        unstash 'dev_deploy_stash'

        sh '''
          git checkout dev
          git reset --hard $(cat hash)
          rm hash
          git checkout qa
          git merge dev
          git push origin qa
        '''
        }
      }
    }
  }
}